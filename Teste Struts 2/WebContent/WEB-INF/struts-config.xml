<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd"> 

<struts-config> 
        
        <form-beans>
        	<form-bean name="registerForm" type="com.forms.RegisterForm"/>
        </form-beans>
        
        <global-forwards>
        	<forward name="/register" path="/register.do"/>
        </global-forwards>
        
        <action-mappings>
        
        	<action path="/register"
        			parameter="method"
        			input="/register.jsp"
        			scope="session"
        			name="registerForm"
        			type="com.actions.RegisterAction"
        			validate="true"/>	
        						
       	</action-mappings>
        
        <message-resources parameter="com.system.resource.MessageResources"/>

</struts-config> 